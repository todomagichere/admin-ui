{% import '@ibexadesign/ui/component/macros.html.twig' as html %}

{% if title is defined %}
    <div class="ibexa-page-title">
        <div class="ibexa-page-title__top">
            <h1 class="ibexa-page-title__title">
                {{ title }}
                {% if tag is defined %}
                    {% set tag_attr = { class: 'ibexa-badge ' ~ tag_extra_classes|default('') }|merge(tag_attr|default({})) %}

                    <div {{ html.attributes(tag_attr) }}>
                        {{ tag }}
                    </div>
                {% endif %}
            </h1>
            {% block top_side %}{% endblock %}
        </div>
        <div class="ibexa-page-title__bottom">
            {% block bottom %}{% endblock %}
        </div>
    </div>
{% endif %}
